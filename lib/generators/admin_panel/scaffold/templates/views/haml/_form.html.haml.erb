= simple_bootstrap_form_for <%= "[:#{prefix}, @#{singular_table_name}]" %> do |f|

  = f.error_notification

  .form-inputs
<%- attributes.each do |attribute| -%>
    = f.<%= attribute.reference? ? :association : :input %> :<%= attribute.name %>
<%- end -%>
  .form-actions
    = f.button :submit, :class => 'btn btn-primary'